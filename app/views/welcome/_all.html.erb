<% if @result %>

  <div class="allresults">
    <% if @button=="price" %>
      <% @result.each do |event| %>
        <div class="eachresult1">
            <div class="name1">
              <%="#{event.name}" %>
            </div>
            <div class="location1">
              <%= "@ #{event.location}" %>
            </div>
            <div class="time1">
              <%= "@ #{event.time}" %>
            </div>
            <div class="matchscore1">
              Price:
              <% if event.price==0 %>
                <% score="Free"%>
              <% elsif event.price==1000 %>
                <% score="Price not listed"%>
              <% else %>
                <% score=event.price %>
              <% end %>
              <a class="score1">$<%= score %></a>
            </div>
          </div>
      <% end %>
    <% elsif @button == "dist" %>
      <% @result.each do |event, score| %>
        <div class="eachresult1">
            <div class="name1">
              <%="#{event.name}" %>
            </div>
            <div class="location1">
              <%= "@ #{event.location}" %>
            </div>
            <div class="time1">
              <%= "@ #{event.time}" %>
            </div>
            <div class="matchscore1">
              Distance Away:
              <% if score>50 %>
                <% score="Location not listed" %>
              <% end %>
              <a class="score1"><%= score %>km</a>
            </div>
          </div>
      <% end %>

    <% elsif @button == "time" %>
      <% @result.each do |event| %>
        <div class="eachresult1">
            <div class="name1">
              <%="#{event.name}" %>
            </div>
            <div class="location1">
              <%= "@ #{event.location}" %>
            </div>
            <div class="time1">
              <%= "@ #{event.time}" %>
            </div>
            <div class="matchscore1">
              At:
              <% if event.time!="Time not listed" %>
                <% if event.time.strftime("%I:%M %p") == "11:59 PM" %>
                  <% event.time="Time not listed" %>
                <% end %>

                <div class="score1"><%= event.time=="Time not listed" ? event.time : event.time.strftime("%I:%M %p") %></div>
              <% else %>
                  <div class="score1"><%= event.time %></div>

              <% end %>
            </div>
             </div>
        <% end %>





    <% else %>
      <% @result.each do |score, name| %>
      	<% if name!="No 1st place" && name!="No 2nd place" && name!="No 3rd place" %>
      		<div class="eachresult1">
      			<div class="name1">
      				<%="#{name}" %>
       			</div>
       			<div class="location1">
       				<%= "@ #{Event.find_by_name(name).location}" %>
       			</div>
       			<div class="time1">
       				<%= "@ #{Event.find_by_name(name).time}" %>
       			</div>
        		<div class="matchscore1">
              Relevance score:
            	<a class="score1"><%= score.round(1) %>%</a>
          	</div>

     		</div>
      	<% else %>
      		<div class="eachresult1">
            	<%= name %>
           	</div>

        <% end %>
      <% end %>
  </div><br>
   <% end %>
<% end %>
