<button id="select-all">Select all</button> <br>
<button id="uncheck">Uncheck all</button> <br>

<% @eventsToday.each do |event| %>
  <% if !event.approved %>
    <%= check_box_tag(:event) %>
    <%= label_tag(:event, "#{event.name}", class: 'check-box') %>
  <% else %>
    <%= event.name %>
    Approved event
  <% end %>
  <br>
<% end %>